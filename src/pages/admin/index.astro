<Layout title="Administrace OpenVoting">
    <div class="admin-container">
        <header>
            <h1>Administrátorský panel OpenVoting</h1>
            <div class="user-info">
                <p>Přihlášen jako: <strong>{user.name}</strong></p>
                <a href="/" class="btn btn-small">Domů</a>
                <button id="logout-btn" class="btn btn-small btn-danger">Odhlásit se</button>
            </div>
        </header>

        {message && (
                <div class={`message ${messageType}`}>
                    <p>{message}</p>
                    <button class="close-message">&times;</button>
                </div>
        )}

        <nav class="tabs">
            <button class="tab-btn active" data-tab="users">Uživatelé</button>
            <button class="tab-btn" data-tab="polls">Ankety</button>
            <button class="tab-btn" data-tab="groups">Skupiny</button>
        </nav>

        <main class="admin-content">
            <!-- Panel s uživateli -->
            <section id="users" class="tab-content active">
                <div class="section-header">
                    <h2>Správa uživatelů</h2>
                    <button class="btn" id="show-add-user">Přidat uživatele</button>
                </div>

                <!-- Formulář pro přidání uživatele -->
                <div id="add-user-form" class="form-container hidden">
                    <form method="POST">
                        <input type="hidden" name="action" value="add-user">
                        <h3>Přidat nového uživatele</h3>
                        <div class="form-group">
                            <label for="username">Uživatelské jméno:</label>
                            <input type="text" id="username" name="username" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Heslo (nechte prázdné pro náhodné):</label>
                            <input type="text" id="password" name="password">
                        </div>
                        <div class="form-group checkbox-group">
                            <label>
                                <input type="checkbox" name="organizator">
                                Oprávnění organizátor
                            </label>
                        </div>
                        <div class="form-group checkbox-group">
                            <label>
                                <input type="checkbox" name="administrator">
                                Oprávnění administrátor
                            </label>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn">Vytvořit uživatele</button>
                            <button type="button" class="btn btn-secondary cancel-form">Zrušit</button>
                        </div>
                    </form>
                </div>

                <!-- Tabulka uživatelů -->
                <div class="table-container">
                    <table>
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Jméno</th>
                            <th>Organizátor</th>
                            <th>Administrátor</th>
                            <th>Vytvořen</th>
                            <th>Akce</th>
                        </tr>
                        </thead>
                        <tbody>
                        {users.map((user) => (
                                <tr>
                                    <td>{user.id}</td>
                                    <td>{user.name}</td>
                                    <td>{user.organizator ? "Ano" : "Ne"}</td>
                                    <td>{user.administrator ? "Ano" : "Ne"}</td>
                                    <td>{new Date(user.created_at).toLocaleString()}</td>
                                    <td class="actions">
                                        <button class="btn-icon edit-user" data-id={user.id} data-name={user.name}
                                                data-organizator={user.organizator}
                                                data-administrator={user.administrator}>
                                            <span class="material-icons">edit</span>
                                        </button>
                                        <button class="btn-icon delete-user" data-id={user.id} data-name={user.name}>
                                            <span class="material-icons">delete</span>
                                        </button>
                                    </td>
                                </tr>
                        ))}
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Panel s anketami -->
            <section id="polls" class="tab-content">
                <div class="section-header">
                    <h2>Správa anket</h2>
                    <button class="btn" id="show-add-poll">Přidat anketu</button>
                </div>

                <!-- Formulář pro přidání ankety -->
                <div id="add-poll-form" class="form-container hidden">
                    <form method="POST">
                        <input type="hidden" name="action" value="add-poll">
                        <h3>Přidat novou anketu</h3>
                        <div class="form-group">
                            <label for="poll-name">Název ankety:</label>
                            <input type="text" id="poll-name" name="poll-name" required>
                        </div>
                        <div class="form-group">
                            <label for="poll-expires">Končí (nechte prázdné pro neomezeně):</label>
                            <input type="datetime-local" id="poll-expires" name="poll-expires">
                        </div>
                        <div class="form-group checkbox-group">
                            <label>
                                <input type="checkbox" name="poll-anonymous" id="poll-anonymous">
                                Anonymní hlasování
                            </label>
                        </div>
                        <div class="form-group" id="group-selection">
                            <label for="poll-group">Skupina (pouze pro neanonymní hlasování):</label>
                            <select id="poll-group" name="poll-group">
                                <option value="null">-- Bez skupiny --</option>
                                {groups.map((group) => (
                                        <option value={group.id}>{group.name}</option>
                                ))}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="poll-max-options">Maximální počet voleb:</label>
                            <input type="number" id="poll-max-options" name="poll-max-options" value="1" min="1">
                        </div>

                        <div class="form-group">
                            <label>Možnosti hlasování:</label>
                            <input type="hidden" name="options-count" id="options-count" value="2">
                            <div id="options-container">
                                <div class="option-row">
                                    <input type="text" name="option-1" placeholder="Možnost 1" required>
                                </div>
                                <div class="option-row">
                                    <input type="text" name="option-2" placeholder="Možnost 2" required>
                                </div>
                            </div>
                            <button type="button" id="add-option" class="btn btn-small">+ Přidat možnost</button>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn">Vytvořit anketu</button>
                            <button type="button" class="btn btn-secondary cancel-form">Zrušit</button>
                        </div>
                    </form>
                </div>

                <!-- Seznam anket -->
                <div class="polls-grid">
                    {pollsWithDetails.map((poll) => (
                            <div class="poll-card">
                                <div class="poll-header">
                                    <h3>{poll.name}</h3>
                                    <div class="poll-actions">
                                        <button class="btn-icon view-poll" data-id={poll.id}>
                                            <span class="material-icons">visibility</span>
                                        </button>
                                        <button class="btn-icon delete-poll" data-id={poll.id} data-name={poll.name}>
                                            <span class="material-icons">delete</span>
                                        </button>
                                    </div>
                                </div>
                                <div class="poll-details">
                                    <p><strong>Vytvořil:</strong> {poll.owner?.name || "Neznámý"}</p>
                                    <p><strong>Typ:</strong> {poll.anonymous ? "Anonymní" : "Neanonymní"}</p>
                                    <p><strong>Max. výběrů:</strong> {poll.max_options || "Neomezeno"}</p>
                                    {poll.expires &&
                                            <p><strong>Končí:</strong> {new Date(poll.expires).toLocaleString()}</p>}
                                    {poll.group && <p><strong>Skupina:</strong> {poll.group.name}</p>}

                                    <div class="poll-options">
                                        <strong>Možnosti:</strong>
                                        <ul>
                                            {poll.options.map((option) => (
                                                    <li>{option.content}</li>
                                            ))}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        ))}
                        </div>
                        </section>

                        <!-- Panel se skupinami -->
                        <section id="groups" class="tab-content">
                            <div class="section-header">
                                <h2>Správa skupin</h2>
                                <button class="btn" id="show-add-group">Přidat skupinu</button>
                            </div>

                            <!-- Formulář pro přidání skupiny -->
                            <div id="add-group-form" class="form-container hidden">
                                <form method="POST">
                                    <input type="hidden" name="action" value="add-group">
                                    <h3>Přidat novou skupinu</h3>
                                    <div class="form-group">
                                        <label for="group-name">Název skupiny:</label>
                                        <input type="text" id="group-name" name="group-name" required>
                                    </div>
                                    <div class="form-actions">
                                        <button type="submit" class="btn">Vytvořit skupinu</button>
                                        <button type="button" class="btn btn-secondary cancel-form">Zrušit</button>
                                    </div>
                                </form>
                            </div>

                            <!-- Seznam skupin -->
                            <div class="groups-grid">
                                {groupsWithDetails.map((group) => (
                                        <div class="group-card">
                                            <div class="group-header">
                                                <h3>{group.name}</h3>
                                                <div class="group-actions">
                                                    <button class="btn-icon delete-group" data-id={group.id}
                                                            data-name={group.name}>
                                                        <span class="material-icons">delete</span>
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="group-details">
                                                <p><strong>Vlastník:</strong> {group.owner?.name || "Neznámý"}</p>
                                                <p>
                                                    <strong>Vytvořeno:</strong> {new Date(group.created_at).toLocaleString()}
                                                </p>

                                                <div class="group-members">
                                                    <strong>Členové ({group.members?.length || 0}):</strong>
                                                    {group.members?.length > 0 ? (
                                                            <ul>
                                                                {group.members.map((member) => (
                                                                        <li>{member.name}</li>
                                                                ))}
                                                            </ul>
                                                    ) : (
                                                            <p class="no-data">Žádní členové</p>
                                                    )}
                                                </div>
                                            </div>
                                        </div>
                                ))}
                            </div>
                        </section>
                        </main>
                        </div>

                        <!-- Modální okno pro úpravu uživatele -->
                        <div id="edit-user-modal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <form method="POST">
                                    <input type="hidden" name="action" value="edit-user">
                                    <input type="hidden" name="user-id" id="edit-user-id">
                                    <h3>Úprava uživatele</h3>
                                    <div class="form-group">
                                        <label for="edit-username">Uživatelské jméno:</label>
                                        <input type="text" id="edit-username" name="username" required>
                                    </div>
                                    <div class="form-group checkbox-group">
                                        <label>
                                            <input type="checkbox" id="edit-organizator" name="organizator">
                                            Oprávnění organizátor
                                        </label>
                                    </div>
                                    <div class="form-group checkbox-group">
                                        <label>
                                            <input type="checkbox" id="edit-administrator" name="administrator">
                                            Oprávnění administrátor
                                        </label>
                                    </div>
                                    <div class="form-actions">
                                        <button type="submit" class="btn">Uložit změny</button>
                                        <button type="button" class="btn btn-secondary close-modal">Zrušit</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Modální okno pro smazání uživatele -->
                        <div id="delete-user-modal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <form method="POST">
                                    <input type="hidden" name="action" value="delete-user">
                                    <input type="hidden" name="user-id" id="delete-user-id">
                                    <h3>Smazat uživatele</h3>
                                    <p>Opravdu chcete smazat uživatele <strong id="delete-user-name"></strong>?</p>
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-danger">Smazat</button>
                                        <button type="button" class="btn btn-secondary close-modal">Zrušit</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Modální okno pro smazání ankety -->
                        <div id="delete-poll-modal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <form method="POST">
                                    <input type="hidden" name="action" value="delete-poll">
                                    <input type="hidden" name="poll-id" id="delete-poll-id">
                                    <h3>Smazat anketu</h3>
                                    <p>Opravdu chcete smazat anketu <strong id="delete-poll-name"></strong>?</p>
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-danger">Smazat</button>
                                        <button type="button" class="btn btn-secondary close-modal">Zrušit</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Modální okno pro smazání skupiny -->
                        <div id="delete-group-modal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <form method="POST">
                                    <input type="hidden" name="action" value="delete-group">
                                    <input type="hidden" name="group-id" id="delete-group-id">
                                    <h3>Smazat skupinu</h3>
                                    <p>Opravdu chcete smazat skupinu <strong id="delete-group-name"></strong>?</p>
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-danger">Smazat</button>
                                        <button type="button" class="btn btn-secondary close-modal">Zrušit</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        </Layout>

                        <style>
                            /* Grid Layout a základní styly */
                            .admin-container {
                                display: grid;
                                grid-template-areas:
            "header header"
            "tabs tabs"
            "content content";
                                grid-template-rows: auto auto 1fr;
                                min-height: calc(100vh - 40px);
                                padding: 20px;
                                max-width: 1400px;
                                margin: 0 auto;
                            }

                            header {
                                grid-area: header;
                                display: flex;
                                justify-content: space-between;
                                align-items: center;
                                margin-bottom: 20px;
                                padding-bottom: 10px;
                                border-bottom: 1px solid #ddd;
                            }

                            .user-info {
                                display: flex;
                                align-items: center;
                                gap: 10px;
                            }

