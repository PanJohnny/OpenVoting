                            }

                            .poll-card, .group-card {
                                background-color: #fff;
                                border-radius: 5px;
                                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                                padding: 15px;
                                transition: transform 0.2s;
                            }

                            .poll-card:hover, .group-card:hover {
                                transform: translateY(-5px);
                                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
